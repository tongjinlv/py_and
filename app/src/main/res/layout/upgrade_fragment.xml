<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px40"
        android:layout_margin="@dimen/px5"
        android:background="@color/black_color_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_matata_bot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="tab_upgrade_matata_bot"
            android:textColor="@color/black"
            android:background="@color/common_text_color_yellow"
            android:textSize="@dimen/text_20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/px1"
            android:layout_height="@dimen/px30"
            android:background="@color/black_color_20" />

        <TextView
            android:id="@+id/tv_matata_tower"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="tab_upgrade_matata_tower"
            android:textColor="@color/black"
            android:textSize="@dimen/text_20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/px1"
            android:layout_height="@dimen/px30"
            android:background="@color/black_color_20" />

        <TextView
            android:id="@+id/tv_matata_controller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="tab_upgrade_matata_controller"
            android:textColor="@color/black"
            android:textSize="@dimen/text_20sp"
            android:textStyle="bold" />

    </LinearLayout>

 <ImageView
        android:id="@+id/btn_upgrade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pb_upgtade_progress"
        android:layout_below="@+id/ll_title_layout"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/px160"
        android:layout_marginTop="@dimen/px30"
        android:layout_marginRight="@dimen/px160"
        android:scaleType="centerCrop"
         />

    <ImageView
        android:id="@+id/btn_upgrade_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pb_upgtade_progress"
        android:layout_below="@+id/ll_title_layout"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/px160"
        android:layout_marginTop="31dp"
        android:layout_marginRight="@dimen/px160"
        android:layout_marginBottom="13dp"
        android:background="@color/white_color_50" />

    <ProgressBar
        android:id="@+id/pb_upgtade_progress"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_video_url"
        android:layout_marginLeft="@dimen/px160"
        android:layout_marginTop="@dimen/px10"
        android:layout_marginRight="@dimen/px160"
        android:progress="0"
        android:max="100" />

    <TextView
        android:id="@+id/tv_video_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px10"
        android:paddingLeft="@dimen/px16"
        android:paddingRight="@dimen/px16"
        android:paddingTop="@dimen/px4"
        android:paddingBottom="@dimen/px8"
        android:text="guide_video_text"
        android:textColor="@color/common_text_color_yellow"
        android:background="@drawable/guide_button_bg"
        android:textSize="@dimen/text_16sp" />

    <TextView
        android:id="@+id/tv_version_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/px10"
        android:text="guide_video_text"
        android:textColor="@color/common_text_color_yellow"
        android:textSize="@dimen/text_12sp" />

</RelativeLayout>